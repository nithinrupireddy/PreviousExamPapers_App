<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pic"
    tools:context="com.nithin.finalproject.Dialogues.Resendverification"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="299dp"
        android:layout_height="39dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="81dp"
        android:text="   Resend Verification Email"
        android:textColor="@color/Black"
        android:textSize="24sp"
        app:layout_constraintHorizontal_bias="0.511"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/resendemail"
        android:layout_width="241dp"
        android:layout_height="45dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="53dp"
        android:ems="10"
        android:fontFamily="serif"
        android:hint="Email"
        android:textColor="@color/Black"
        android:textColorHint="@color/Ash"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        tools:layout_editor_absoluteX="83dp" />

    <EditText
        android:id="@+id/resendpassword"
        android:layout_width="238dp"
        android:layout_height="43dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="29dp"
        android:ems="10"
        android:fontFamily="serif"
        android:hint="Password"
        android:textColorHint="@color/Ash"
        android:textColor="@color/Black"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resendemail" />

    <TextView
        android:id="@+id/cancel"
        android:layout_width="111dp"
        android:layout_height="39dp"
        android:text="   Cancel"
        android:textColor="@color/Black"
        android:textSize="20sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.287"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/resendpassword" />

    <TextView
        android:id="@+id/resendconfirm"
        android:layout_width="124dp"
        android:layout_height="37dp"
        android:text="   Confirm"
        android:textColor="@color/Black"
        android:textSize="20sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.809"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toBottomOf="@+id/resendpassword" />

</android.support.constraint.ConstraintLayout>